<?xml version="1.0" encoding="utf-8"?>


    <!-- days toolbar -->
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/calendar_prev_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_left_24px"/>

        <RelativeLayout
            android:id="@+id/date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@id/calendar_prev_button"
            android:layout_toEndOf="@id/calendar_prev_button">
            <!-- date title -->
            <TextView
                android:id="@+id/date_display_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="50dp"
                android:textStyle="normal"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textColor="#222222"
                android:text="2019"/>
            <!-- date title -->
            <!-- date title -->
            <TextView
                android:id="@+id/date_display_date"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="27 Nov"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="#222222"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_display_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:textColor="#222222"
                android:text="Wednesday"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/calendar_next_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@id/date_display"
            android:layout_toRightOf="@id/date_display"
            android:src="@drawable/ic_keyboard_arrow_right_24px"/>


    <!-- days header -->
    <RelativeLayout
        android:id="@+id/calendar_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#222222"
            android:text="MON"/>

        ...REPEAT UNTIL SUN
    </RelativeLayout>

    <!-- days view -->


</RelativeLayout>